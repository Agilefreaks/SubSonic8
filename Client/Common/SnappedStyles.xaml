<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style TargetType="TextBlock" x:Key="SnappedTitleStyle">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="FontWeight" Value="Normal"/>
    </Style>
    <Style TargetType="TextBlock" BasedOn="{StaticResource SnappedTitleStyle}" x:Key="SnappedArtistStyle">
        <Setter Property="FontWeight" Value="Bold"/>
    </Style>
    <Style TargetType="TextBlock" x:Key="SnappedAppNameStyle">
        <Setter Property="FontSize" Value="20"/>
        <Setter Property="Margin" Value="0,0,0,160"></Setter>
    </Style>
</ResourceDictionary>
