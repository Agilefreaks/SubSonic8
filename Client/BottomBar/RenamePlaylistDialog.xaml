<UserControl
    x:Class="Subsonic8.BottomBar.RenamePlaylistDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel Orientation="Horizontal">
        <TextBox x:Name="PlaylistNameTextBox" Style="{StaticResource PopupTextBoxStyle}"
                 GotFocus="PlaylistNameTextBox_OnGotFocus" />
        <Button x:Name="OkButton" Click="Ok_OnClick" Content="Ok" Style="{StaticResource LightButton}" />
    </StackPanel>
</UserControl>